<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/friendlist"
        android:layout_width="110dp"
        android:layout_height="175dp"
        android:layout_alignBaseline="@+id/coordlist"
        android:layout_alignBottom="@+id/coordlist"
        android:layout_alignRight="@+id/statusView"
        android:text="People Near You:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/statusView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editName"
        android:gravity="center"
        android:text="Find a Workout Buddy!"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_above="@+id/friendlist"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:text="Getting GPS Coordinates..."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/coordlist"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_centerVertical="true"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_above="@+id/addserv"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="#D9D9D9"
        android:ems="10"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/editName"
        android:layout_alignBottom="@+id/editName"
        android:layout_alignLeft="@+id/coordlist"
        android:text="Appear As:"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addserv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:background="#2990FF"
        android:text="Find a Friend"
        android:textSize="13sp" />

    <Button
        android:id="@+id/removeserv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/addserv"
        android:layout_toRightOf="@+id/coordlist"
        android:background="#2990FF"
        android:text="I&apos;m Getting Outta Here"
        android:textSize="13sp" />

</RelativeLayout>