<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/statusView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="Find a Workout Buddy!"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:background="#D9D9D9"
        android:ems="10" 
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/statusView"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="39dp"
        android:text="Getting GPS Coordinates..."
        android:textSize="25sp" />

    <TextView
        android:id="@+id/coordlist"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friendlist"
        android:layout_width="160dp"
        android:layout_height="275dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/coordlist"
        android:text="People Near You:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/coordlist"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:text="Appear As:"
        android:textSize="25sp" />

    <Button
        android:id="@+id/addserv"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_above="@+id/editName"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="33dp"
        android:text="Find a Friend"
        android:background="#2990FF" />

    <Button
        android:id="@+id/removeserv"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignBaseline="@+id/addserv"
        android:layout_alignBottom="@+id/addserv"
        android:layout_alignRight="@+id/editName"
        android:text="I'm Getting Outta Here"
        android:background="#2990FF" />
    
</RelativeLayout>
